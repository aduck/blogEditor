extends layout.pug
block header
	title #{blog.name}-标签
	link(href="../css/style.css",rel="stylesheet")
block content
	.container
		.journalItems.clearfix
			each item,index in items
				.journalItem
					.journalItem-thumb
						a(href=`/journal/${item._id}`)
							img(src=`${item.thumb}`,alt="")
					.journalItem-info
						.journalItem-title
							a(href=`/journal/${item._id}`) #{item.title}
						.journalItem-intro
							| #{intros[index]}
						.journalItem-tags.clearfix
							each val in item.tags
								a(href=`/tag/${val}`) #{val}
						.journalItem-date
							| #{dates[index]}
			else
				p 当前分类没有文章